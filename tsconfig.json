{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "allowJs": true,
    "checkJs": false,
    "lib": [ "ES2021" ],
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src"],
  "compileOnSave": true
}
